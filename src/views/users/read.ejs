<%- include ('../partials/header') -%>
<header>
  <nav
    class="navbar navbar-expand-lg navbar-lighter"
    style="background-color: #e60008"
  >
    <a class="navbar-brand" style="color: #fff" href="#"
      >Restaruant Reservation</a
    >
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto"></ul>
      <form class="form-inline my-2 my-lg-0">
        <button class="btn btn-outline-light my-2 my-sm-0" type="submit">
          Cerrar Sesi√≥n
        </button>
      </form>
    </div>
  </nav>
</header>
<body>
  <div class="d-flex" id="wrapper">
    <div id="page-content-wrapper">
      <div class="container-fluid">
        <br />
        <h2>Usuarios</h2>
        <br />
        <section>
          <table class="table">
            <thead class="thead-dark">
              <tr>
                <th scope="col">Identificador</th>
                <th scope="col">Tipo documento</th>
                <th scope="col">Numero Documento</th>
                <th scope="col">Nombres</th>
                <th scope="col">Apellidos</th>
                <th scope="col">Correo</th>
                <th scope="col">Celular</th>
                <th scope="col">Roll</th>
                <th scope="col">Estado</th>
                <th scope="col">Acciones</th>
              </tr>
            </thead>
            <% for (let i = 0;  i < users.length;  i++) { %>
            <tbody>
              <tr>
                <th scope="row"> <%= i + 1 %> </th>
                <td> <%= tipDoc[i].tipoDocumento %> </td>
                <td> <%= users[i].documento %> </td>
                <td> <%= users[i].nombres %> </td>
                <td> <%= users[i].apellidos %> </td>
                <td> <%= users[i].correo %> </td>
                <td> <%= users[i].celular %> </td>

                <td> <%= roles[i].roll %> </td>

                <% if (users[i].estado == 1) { %>
                  <td> Activo </td>
                <% }else { %>
                  <td> Inactivo </td>
                <% } %>
                <td>
                  <a class="btn btn-primary" href="/users/edit/<%= users[i].idUsuario %>">Editar</a>
                  <a class="btn btn-danger" href="/">Deshabilitar</a>
                </td>
              </tr>
            </tbody>
            <% } %>
          </table>
        </section>
      </div>
    </div>
  </div>
</body>
