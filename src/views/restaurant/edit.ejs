<%- include('../partials/header.ejs') -%>

<div class="container p-4">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">
        <h3>Editar Restaurante</h3>
      </div>
      <div class="card-body">
        <form
          action="/restaurants/edit/<%= restaurant.idRestaurante %>"
          method="post"
        >
          <div class="form-group">
            <label for="" class="form-label">Nombre del Restaurante</label>
            <input
              type="text"
              class="form-control"
              placeholder="KFC"
              name="nombreRestaurante"
              value="<%= restaurant.nombreRestaurante %>"
            />
          </div>
          <div class="form-group">
            <label for="" class="form-label">Telefono</label>
            <input
              type="text"
              class="form-control"
              placeholder="7783484"
              name="telefono"
              value="<%= restaurant.telefono %>"
            />
          </div>
          <div class="form-group">
            <label for="" class="form-label">Direcci√≥n</label>
            <input
              type="text"
              class="form-control"
              placeholder="Centro comercial"
              name="direccion"
              value="<%= restaurant.direccion %>"
            />
          </div>
          <div class="form-group">
            <label for="" class="form-label">Estado</label>
            <select class="form-control" id="exampleFormControlSelect1">
              <option value="1">Activo</option>
              <option value="0">Inactivo</option>
            </select>
          </div>
          <br />
          <div class="form-group">
            <button class="btn btn-danger">Guardar</button>
            <a href="/restaurants" class="btn btn-secondary">Cancelar</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/footer.ejs') -%>
